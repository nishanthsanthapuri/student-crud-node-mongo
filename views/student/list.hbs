<h3 class="d-flex justify-content-between align-items-center mb-3">
  <span>Student List</span>
  <a class="btn btn-secondary" href="/student">Create New</a>
</h3>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>City</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    {{#each list}}
      <tr>
        <td>{{@index}}</td>
        <td>{{this.fullName}}</td>
        <td>{{this.email}}</td>
        <td>{{this.mobile}}</td>
        <td>{{this.city}}</td>
        <td>
          <a class="btn btn-primary btn-sm" href="/student/{{this._id}}">
            Edit
          </a>
          <a
            class="btn btn-danger btn-sm ms-1"
            href="/student/delete/{{this._id}}"
            onclick="return confirm('Are you sure you want to delete this record?');"
          >
            Delete
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>